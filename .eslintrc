---
  parser: babel-eslint
  extends:
    - eslint:recommended
    - plugin:react/recommended
    - plugin:import/react
    - plugin:import/recommended
  plugins:
    - react
    - import
    - private-props
  parserOptions:
    ecmaVersion: 6
    sourceType: module
    ecmaFeatures: { jsx: true }
  env:
    es6: true
    node: true
    jest: true
    jasmine: true
    browser: true
  globals:
    $Shape: true
    SyntheticInputEvent: true
  settings:
    import/resolver: { node: { extensions: ['.js', '.jsx'] } }
  rules:
    array-bracket-spacing: 2
    arrow-body-style: 2
    arrow-parens: [2, always]
    eol-last: [2, always]
    comma-dangle: [2, { arrays: always-multiline, objects: always-multiline, imports: always-multiline, exports: always-multiline, functions: ignore }]
    consistent-return: 2
    global-require: 0
    jsx-quotes: [2, prefer-single]
    linebreak-style: 0
    newline-per-chained-call: 0
    no-await-in-loop: 0
    no-bitwise: 0
    no-console: 2
    no-param-reassign: [2, { props: true }]
    no-plusplus: 0
    no-restricted-imports: [error, lodash]
    no-restricted-syntax: [error, ForInStatement, LabeledStatement, WithStatement]
    no-shadow: 2
    no-unused-expressions: 0
    no-underscore-dangle: 0
    no-use-before-define: 2
    no-warning-comments: [1, { terms: [todo, fixme], location: anywhere }]
    object-curly-spacing: [2, always]
    padded-blocks: [2, { classes: never }]
    require-await: 2
    semi: 2
    yoda: [2, never, { exceptRange: true }]
    import/extensions: [0, '.js', '.jsx']
    import/first: [2, absolute-first]
    import/imports-first: 0
    import/named: 2
    import/newline-after-import: 2
    import/no-duplicates: 2
    import/no-extraneous-dependencies: 0
    import/no-mutable-exports: 2
    import/no-named-default: 2
    import/no-named-as-default: 2
    import/no-named-as-default-member: 2
    import/no-namespace: 0
    import/no-unresolved: [2, { commonjs: true, caseSensitive: true, ignore: [AppTestUtil] }]
    import/no-webpack-loader-syntax: 2
    import/prefer-default-export: 2
    import/unambiguous: 0
    private-props/no-unused-or-undeclared: [2, { privateMatchers: [^_, ^handle.+, ^render.+] }]
    react/display-name: [0, { ignoreTranspilerName: false }]
    react/forbid-prop-types: [2, { forbid: [any] }]
    react/no-direct-mutation-state: 2
    react/no-unused-prop-types: 2
    react/prefer-stateless-function: 0
    react/prop-types: 2
    react/sort-comp: [2, { order: [static-methods, type-annotations, lifecycle, /^is.+$/, /^get.+$/, /^set.+$/, /^handle.+$/, everything-else, render] }]
    react/require-default-props: 2
