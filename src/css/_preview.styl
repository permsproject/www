.preview
  display flex
  align-items top
  background-color $color-gray5
  transition background-color 0.24s $easing-quick

  & + .preview
    margin-top $gutter * 4

  &:hover
    cursor pointer
    background-color white

    .caption .caption-image
      transform scale(1.12)

    .description .title
      color $color-emphasis2

  .caption
    flex 1
    display block
    overflow hidden

    .caption-image
      width 100%
      height 100%
      background-size cover
      background-repeat no-repeat
      background-position 50% 50%
      transition transform 0.24s $easing-quick

    img
      display block

  .description
    flex 2
    display flex
    flex-direction column
    justify-content space-between
    padding $gutter

    time
      font-weight bold

    .header
      display flex
      align-items center
      justify-content space-between

    .title
      display flex
      align-items center
      font-size 1.6em
      font-weight 700
      min-height $gutter * 10
      transition color 0.24s $easing-quick

    .footer
      display flex
      align-items center
      justify-content space-between
