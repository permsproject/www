.article
  margin 0 auto
  max-width $screen

  section
    &.page
      p
        text-align center

  h1
    margin-bottom 1em
    font-size 3em
    font-weight 700
    text-align center

  h2
    margin-top 2em
    margin-bottom 1em
    font-size 2em
    font-weight 700
    text-align center

  h3
    margin-bottom 1em
    font-size 1.5em
    font-weight 700
    text-align left

  p
    padding-bottom 1em

  ul
    margin-bottom 2em
    list-style-type disc

  li
    margin-left 2em
    padding-left 0

  img, iframe
    width 100%
    max-width 100%

  nav
    margin-bottom $gutter * 2
    display flex
    align-items center
    justify-content space-between
    width 100%

  .tags
    display flex
    align-items center

  .tag
    width $gutter * 15
    height $gutter * 4
    line-height @height
    color white
    font-weight 700
    text-align center
    background-color $color-gray2
    box-shadow ($gutter * 0.5) ($gutter * 0.5) 0 rgba(@background-color, 0.24)

    & + .tag, & + .author
      margin-left $gutter

    &.tag-clientWork
      background-color $color-emphasis1
      box-shadow ($gutter * 0.5) ($gutter * 0.5) 0 rgba(@background-color, 0.24)

    &.tag-product
      background-color $color-emphasis2
      box-shadow ($gutter * 0.5) ($gutter * 0.5) 0 rgba(@background-color, 0.24)

    &.tag-exhibition
      background-color $color-emphasis3
      box-shadow ($gutter * 0.5) ($gutter * 0.5) 0 rgba(@background-color, 0.24)

  .members
    display flex
    align-items center

  .member
    display flex
    align-items center
    font-weight bold

    & + .member
      margin-left $gutter * 2

    img
      width $gutter * 3
      height @width
      border-radius 50%

    span
      margin-left $gutter
