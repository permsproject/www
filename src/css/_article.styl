.article
  margin 0 auto
  max-width $screen

  section
    &.page
      p
        text-align center

  h1
    margin-bottom 1em
    font-size 3em
    font-weight 700
    text-align center

  h2
    margin-top 2em
    margin-bottom 1em
    font-size 2em
    font-weight 700
    text-align center

  h3
    margin-bottom 1em
    font-size 1.5em
    font-weight 700
    text-align left

  p
    padding-bottom 1em

  ul
    margin-bottom 2em
    list-style-type disc

  li
    margin-left 2em
    padding-left 0

  nav
    margin-bottom $gutter * 2
    display flex
    align-items center
    justify-content space-between
    width 100%

  img, iframe
    width 100%
    max-width 100%

  .tags
    display flex
    align-items center
    font-size 1.2em

  .tag
    width $gutter * 15
    height $gutter * 5
    line-height @height
    color white
    font-weight 700
    text-align center
    background-color $color-gray2

    & + .tag, & + .author
      margin-left $gutter

    &.tag-clientWork
      background-color $color-emphasis1

    &.tag-product
      background-color $color-emphasis2

    &.tag-exhibition
      background-color $color-emphasis3

  .author
    display flex
    height $gutter * 5
    align-items center

    img
      width $gutter * 4
      height @width
      border-radius 50%

    span
      margin-left $gutter
      font-weight bold
